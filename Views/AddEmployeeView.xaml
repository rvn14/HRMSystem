<UserControl x:Class="HRM_System.Views.AddEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRM_System.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <Button Content="← Back" Width="80" Margin="0,0,0,10" Click="BackButton_Click" />

            <!-- Form Section -->
            <Border Grid.Row="1" Background="WhiteSmoke" Padding="15" CornerRadius="10">
                <StackPanel>

                    <StackPanel>
                        <TextBlock Text="FORM FOR EMPLOYEE DETAILS" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel>
                            <TextBlock Text="Name"/>
                            <TextBox x:Name="NameBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Employee ID"/>
                            <TextBox x:Name="EmployeeIdBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Email"/>
                            <TextBox x:Name="EmailBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Contact Number"/>
                            <TextBox x:Name="ContactBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Date of Birth"/>
                            <DatePicker x:Name="DobPicker"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Address"/>
                            <TextBox x:Name="AddressBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Job Position"/>
                            <TextBox x:Name="PositionBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Department"/>
                            <TextBox x:Name="DepartmentBox"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Recruitment Date"/>
                            <DatePicker x:Name="RecruitmentDatePicker"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="RESET" Width="100" Click="ResetButton_Click"/>
                            <Button Content="SUBMIT" Width="100" Click="SubmitButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
