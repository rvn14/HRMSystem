<Window x:Class="HRM_System.Views.AttendanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Attendance" Height="600" Width="800" Background="#FFF2F2F2">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>

        <!-- Back Button -->
        <Button Content="← Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="0,10,0,0" Click="BackButton_Click" />

        <!-- Search Bar with Dropdown -->
        <StackPanel Orientation="Horizontal" Margin="0,50,0,0" Grid.ColumnSpan="2">
            <TextBlock Text="SEARCH EMPLOYEE" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <ComboBox x:Name="MonthDropdown" Width="120" Height="30" DropDownOpened="MonthDropdown_DropDownOpened" />
        </StackPanel>

        <!-- Attendance Table Placeholder -->
        <Border Background="#EAEAEA" CornerRadius="10" Margin="0,100,0,140" Grid.ColumnSpan="2">
            <!-- Blank for now -->
        </Border>

        <!-- Generate Report & PDF Link -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,70" Grid.Column="1">
            <Button Content="GENERATE REPORT" Width="200" Height="40" FontWeight="Bold" Click="GenerateReport_Click"/>
        </StackPanel>

        <!-- Dummy PDF Link -->
        <TextBlock x:Name="GeneratedPdfLink" Text="" FontWeight="Bold" VerticalAlignment="Bottom" Margin="10,0,0,70" Grid.ColumnSpan="2"/>

        <!-- Bottom Search Again Bar -->
        <DockPanel VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <TextBlock Text="SEARCH BY KEY WORD" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" />
            <TextBox Width="600" Height="30"/>
        </DockPanel>
    </Grid>
</Window>
