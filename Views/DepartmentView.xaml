<UserControl x:Class="HRM_System.Views.DepartmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRM_System.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="*"/>
            <!-- Main Panel -->
        </Grid.ColumnDefinitions>
        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Table Area -->
                <RowDefinition Height="Auto"/>
                <!-- Action Row -->
            </Grid.RowDefinitions>

            <!-- Department Table Area -->
            <Border Grid.Row="0" Background="#FFF5F5F5" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <!-- TODO: Replace this TextBlock with a DataGrid -->
                    <StackPanel>
        
                        <TextBlock Text="Department table goes here" 
                                FontSize="16" FontWeight="Bold"
                                HorizontalAlignment="Center"
                                Margin="0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Action Row: Search and Add Button -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Label Content="SEARCH department" VerticalAlignment="Center"/>
                <TextBox Width="200" Height="25"/>
                <Button Content="ADD DEPARTMENT" Width="200" Height="30" Click="Click_Add_Department"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
