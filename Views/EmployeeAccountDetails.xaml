<UserControl x:Class="HRM_System.Views.Employee.EmployeeAccountDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20" CornerRadius="10" Background="White" Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <Ellipse Width="60" Height="60" Fill="Gray" HorizontalAlignment="Left"/>
                <TextBlock Text="USER ID - 463JDIO" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="NAME - WJFBHWF" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="FULL NAME" FontWeight="SemiBold"/>
                <TextBox x:Name="FullNameBox" Margin="0,0,0,10"/>

                <TextBlock Text="EMAIL" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,10" IsReadOnly="True"/>

                <TextBlock Text="CONTACT NUMBER" FontWeight="SemiBold"/>
                <TextBox x:Name="ContactBox" Margin="0,0,0,10"/>

                <TextBlock Text="JOB POSITION" FontWeight="SemiBold"/>
                <TextBox x:Name="PositionBox" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="EMAIL" FontWeight="SemiBold"/>
                <TextBox IsReadOnly="True" Text="dasun@email.com"/>

                <TextBlock Text="DATE OF BIRTH" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="1999-01-01" IsEnabled="False"/>

                <TextBlock Text="DATE OF RECRUITMENT" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="2022-01-01" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
