<UserControl x:Class="HRM_System.Views.Employee.EmployeeAttendance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRM_System.Views.Employee"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10" Background="White" Padding="20" Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Left: Attendance Calendar -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="ATTENDANCE CALENDAR" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Border Background="#FAFAFA" CornerRadius="10" Height="250" BorderBrush="#CCC" BorderThickness="1">
                    <!-- TODO: Replace this with actual Calendar control or calendar component -->
                    <TextBlock Text="(Calendar Here)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Border>
            </StackPanel>

            <!-- Right: Requests + Balance -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <!-- Pending Requests -->
                <TextBlock Text="PENDING REQUESTS" FontWeight="Bold"/>
                <Border Background="#FAFAFA" CornerRadius="10" Height="100" BorderBrush="#CCC" BorderThickness="1">
                    <TextBlock Text="(Pending List)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Border>

                <!-- Leave Balance -->
                <TextBlock Text="LEAVE BALANCE" FontWeight="Bold" Margin="0,10,0,0"/>
                <Border Background="#FAFAFA" CornerRadius="10" Height="100" BorderBrush="#CCC" BorderThickness="1">
                    <TextBlock Text="(Leave Info)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Border>
            </StackPanel>

            <!-- Button -->
            <Button Grid.Row="1" Grid.Column="1" Content="REQUEST FOR A LEAVE"
                    Width="200" Height="35" Margin="0,15,0,0"
                    HorizontalAlignment="Right" Click="RequestLeave_Click"/>
        </Grid>
    </Border>
</UserControl>
