<UserControl x:Class="HRM_System.Views.EmployeeAttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F0F0F0">
            <StackPanel Margin="10">
                <Border BorderBrush="Blue" BorderThickness="2" Padding="10">
                    <StackPanel>
                        <Ellipse Width="60" Height="60" Fill="Gray" HorizontalAlignment="Left" Margin="0,5"/>
                        <TextBlock Text="WELCOME" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="USER ID – 463JDIO" FontSize="12"/>
                    </StackPanel>
                </Border>
                <Button Content="ATTENDENCE" Height="40" Margin="0,30,0,0" Background="Black" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Main Panel -->
        <Border Grid.Column="1" Margin="10" Background="#FFF" CornerRadius="10" Padding="15" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Calendar -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Side Widgets -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Attendance Calendar Section -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="ATTENDANCE CALENDAR" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <Border Background="#F7F7F7" Height="350" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1">
                        <!-- Calendar Control Placeholder -->
                    </Border>
                </StackPanel>

                <!-- Pending Requests & Leave Info -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="PENDING REQUESTS" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Border Background="#F7F7F7" Height="100" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1">
                        <!-- Pending Requests Content -->
                    </Border>

                    <TextBlock Text="LEAVE BALANCE" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border Background="#F7F7F7" Height="100" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1">
                        <!-- Leave Balance Content -->
                    </Border>

                    <!-- Request Leave Button -->
                    <Button Content="REQUEST FOR A LEAVE" Height="35" Background="#888" Foreground="White" Margin="0,20,0,0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
