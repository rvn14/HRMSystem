<Window x:Class="HRM_System.Views.EmployeeAttendanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attendance History" Height="400" Width="600" Background="#FFF2F2F2">

    <Grid Margin="20">
        <Button Content="← Back" Width="80" Height="30" Margin="0,0,0,20"
        HorizontalAlignment="Left" VerticalAlignment="Top" Click="BackButton_Click"/>
        <StackPanel>
            <TextBlock Text="View My Attendance" FontSize="18" FontWeight="Bold" Margin="0,50,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Select Month:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="MonthDropdown" Width="150"/> <!--should add a event listener-->
            </StackPanel>

            <Border Background="WhiteSmoke" Height="200" Padding="10" CornerRadius="5">
                <TextBlock x:Name="AttendanceData" Text="(Monthly attendance will appear here...)" FontStyle="Italic"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
