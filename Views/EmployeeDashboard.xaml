<Window x:Class="HRM_System.Views.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Dashboard" Height="450" Width="800" Background="#FFF2F2F2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content Area -->
        </Grid.ColumnDefinitions>

        <!-- 🧭 Sidebar -->
        <!-- 🧭 Sidebar -->
        <Border Grid.Column="0" Background="#EEEAF8">
            <StackPanel Margin="10" VerticalAlignment="Top">

                <!-- Profile Picture + Welcome -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Image Width="40" Height="40" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="👋 Welcome," FontSize="16" FontWeight="SemiBold" Foreground="#4D2D9C"/>
                        <TextBlock x:Name="EmployeeNameBlock" Text="User" FontSize="16" FontWeight="Bold" Foreground="#4D2D9C"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Buttons -->
                
                <!--Need to add eventlisteners for this three buttons-->
                
                <Button Content="🕒 Attendance" Height="40" Margin="0,10,0,0" Background="#4D2D9C" Foreground="White"/>
                <Button Content="👤 My Account" Height="40" Margin="0,10,0,0" Background="#4D2D9C" Foreground="White"/>
                <Button Content="Signout" Height="40" Margin="0,10,0,0" Background="white" Foreground="#4D2D9C" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>   


        <!-- 🧾 Content Area (Future) -->
        <Border Grid.Column="1" Background="White" Margin="10">
            <TextBlock Text="Welcome to your dashboard!" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="18" FontWeight="Bold" Foreground="#4D2D9C"/>
        </Border>
    </Grid>
</Window>
