<UserControl x:Class="HRM_System.Views.EmployeeDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRM_System.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" CornerRadius="10" Margin="20" Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Left Panel -->
            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Pending Leave Requests 1 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="PENDING LEAVE REQUESTS" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Border Background="#FAFAFA" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Height="120">
                        <TextBlock Text="(Leave list 1)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </StackPanel>

                <!-- Pending Leave Requests 2 -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="PENDING LEAVE REQUESTS" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Border Background="#FAFAFA" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Height="120">
                        <TextBlock Text="(Leave list 2)" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1" Margin="0,0,0,10">
                <TextBlock Text="DUE MEETINGS" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border Background="#FAFAFA" CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Height="250">
                    <TextBlock Text="Notifications and meetings go here" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Border>
            </StackPanel>

            <!-- Bottom Search Bar -->
            <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,15,0,0">
                <TextBlock Text="SEARCH BY KEY WORD" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Width="600" Height="30"/>
            </DockPanel>
        </Grid>
    </Border>
</UserControl>
