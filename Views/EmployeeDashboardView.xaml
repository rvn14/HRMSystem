<UserControl x:Class="HRM_System.Views.EmployeeDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="1000"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Panel -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#FFEFEFEF">
            <StackPanel Margin="10">
                <Ellipse Width="60" Height="60" Fill="Gray" HorizontalAlignment="Left" Margin="0,10"/>
                <TextBlock Text="WELCOME" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="USER ID - 463JDIO" FontSize="12"/>

                <!-- Navigation Buttons -->
                <Button Content="Dashboard" Height="40" Margin="0,30,0,0" Background="Black" Foreground="White"/>
                <Button Content="Employee Data" Height="40" Margin="0,10,0,0"/>
                <Button Content="Attendance" Height="40" Margin="0,10,0,0"/>

                <Button Content="Sign-out" Height="40" Margin="0,40,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Dashboard Area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Main Boxes -->
                <RowDefinition Height="Auto"/>
                <!-- Search -->
            </Grid.RowDefinitions>

            <!-- Top Content Grid -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Boxes -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" >
                    <Border Background="#FFF5F5F5" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10" Height="120">
                        <!-- PENDING LEAVE REQUESTS 1 -->
                        <TextBlock Text="PENDING LEAVE REQUESTS" FontWeight="Bold"/>
                    </Border>

                    <Border Background="#FFF5F5F5" BorderBrush="Gray" BorderThickness="1" Margin="0,20,0,0" CornerRadius="8" Padding="10" Height="200">
                        <!-- PENDING LEAVE REQUESTS 2 -->
                        <TextBlock Text="PENDING LEAVE REQUESTS" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Right Large Box -->
                <Border Grid.Column="1" Background="#FFF5F5F5" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="10">
                    <!-- DUE MEETINGS / NOTIFICATIONS -->
                    <TextBlock Text="DUE MEETINGS&#x0a;NOTIFICATIONS"
                               FontSize="16" FontWeight="Bold" 
                               TextAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Search Row -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Label Content="SEARCH BY KEY WORD" VerticalAlignment="Center"/>
                <TextBox Width="250" Height="25" Margin="10,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
