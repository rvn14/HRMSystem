<Window x:Class="HRM_System.Views.EmployeeDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Details" Height="600" Width="800" Background="#FFF2F2F2">

    <Grid Margin="20">
        <!-- Back Button -->
        <Button Content="← Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="0,10,0,0" />

        <!-- Employee Table Placeholder -->
        <Border Background="#D9D9D9" CornerRadius="10" Margin="0,50,0,100">
            <DataGrid x:Name="EmployeeDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      HeadersVisibility="Column" Margin="10" />
        </Border>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,45" >
            <Button Content="ADD EMPLOYEE" Width="150" Height="40" FontWeight="Bold" Background="#F4F4F4" Click="AddEmployee_Click" Foreground="Black" />
            <Button Content="REMOVE EMPLOYEE" Width="150" Height="40" FontWeight="Bold" Background="#F4F4F4" Click="RemoveEmployee_Click" Margin="20,0" Foreground="Black" />
            <Button Content="EDIT EMPLOYEE" Width="150" Height="40" FontWeight="Bold" Background="#F4F4F4" Click="EditEmployee_Click" Foreground="Black" />
        </StackPanel>

        <!-- Search Bar -->
        <DockPanel VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock Text="SEARCH BY KEY WORD" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" />
            <TextBox Width="600" Height="30" />
        </DockPanel>
    </Grid>
</Window>