<Window x:Class="HRM_System.Views.PayrollView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payroll Generation" Height="600" Width="800" Background="#FFF2F2F2">

    <Grid Margin="25">

        <!-- Back Button -->
        <Button Content="← Back"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="80"
                Margin="0,10,0,0"
                Click="BackButton_Click" />
        
         <!-- Employee Name Search - Positioned Just Above Placeholder -->
        <StackPanel Orientation="Horizontal" Margin="0,60,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Employee Name:" VerticalAlignment="Top" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBox x:Name="NameSearchTextBox" VerticalAlignment="Top" Width="250" Height="30" Margin="0,0,10,0"/>
            <ComboBox x:Name="PayrollMonthDropdown" VerticalAlignment="Top" Width="120" Height="30" DropDownOpened="PayrollMonthDropdown_DropDownOpened" />
            <Button Content="Search" Width="200" VerticalAlignment="Top" Height="30" Margin="60,0,0,0"  Click="NameSearchButton_Click"/>
        </StackPanel>

        <!-- Payroll Data Placeholder - Directly Below Name Search -->
        <Border Background="#EAEAEA" CornerRadius="10" Margin="0,145,0,145">
            <!-- Future DataGrid goes here -->
        </Border>

        <!-- Generate Payroll & Output Link -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,70">
            <Button Content="GENERATE PAYROLL" Width="170" Height="40" FontWeight="Bold" Click="GeneratePayroll_Click"/>
        </StackPanel>

        <!-- Dummy PDF Display -->
        <TextBlock x:Name="PayrollPdfLink" Text="" FontWeight="Bold" VerticalAlignment="Bottom" Margin="10,0,211,70" Height="40"/>
    </Grid>
</Window>
