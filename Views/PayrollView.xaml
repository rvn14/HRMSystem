<Window x:Class="HRM_System.Views.PayrollView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payroll Generation" Height="600" Width="800" Background="#FFF2F2F2">

    <Grid Margin="20">
        <!-- Back Button -->
        <Button Content="← Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="0,10,0,0"/>

        <!-- Search + Month Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
            <TextBlock Text="SEARCH EMPLOYEE" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PayrollSearchTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <ComboBox x:Name="PayrollMonthDropdown" Width="120" Height="30" DropDownOpened="PayrollMonthDropdown_DropDownOpened" />
        </StackPanel>

        <!-- Payroll Data Placeholder -->
        <Border Background="#EAEAEA" CornerRadius="10" Margin="0,100,0,140">
            <!-- You can later insert a DataGrid or summary here -->
        </Border>

        <!-- Generate Payroll & Output Link -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,70">
            <Button Content="GENERATE PAYROLL" Width="170" Height="40" FontWeight="Bold" Click="GeneratePayroll_Click"/>
        </StackPanel>

        <!-- Dummy PDF Display -->
        <TextBlock x:Name="PayrollPdfLink" Text="" FontWeight="Bold" VerticalAlignment="Bottom" Margin="10,0,0,70"/>

        <!-- Bottom Search -->
        <DockPanel VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock Text="SEARCH BY KEY WORD" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" />
            <TextBox Width="600" Height="30"/>
        </DockPanel>
    </Grid>
</Window>
