<Window x:Class="HRM_System.Views.AddEmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Employee" Height="600" Width="600" Background="#FFF2F2F2">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Back Button -->
            <Button Content="← Back"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="80"
            Margin="0,10,0,0"
            Click="BackButton_Click" />
            
            <!-- Title -->
            <TextBlock Text="Add New Employee" FontSize="20" FontWeight="Bold" Foreground="#4D2D9C" Margin="0,70,0,20"/>

            <!-- Form -->
            <StackPanel Grid.Row="1" Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Employee ID:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="EmployeeIdBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Name:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Age:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="AgeBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Email:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Contact Number:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="ContactBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Department:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="DepartmentBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Job Position:" Width="150" VerticalAlignment="Center"/>
                    <TextBox x:Name="PositionBox" Width="300" Background="#f6f8fa"
                                BorderBrush="#eff2f5"
                                Foreground="#4D2D9C"
                                BorderThickness="1"/> 
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Recruitment Date:" Width="150" VerticalAlignment="Center"/>
                    <DatePicker x:Name="RecruitmentDatePicker" Width="300" />
                </StackPanel>

                <!-- Submit Button -->
                <Button Content="Submit" Width="100" Height="40" HorizontalAlignment="Center"
                        Background="#4D2D9C" Foreground="White" FontWeight="Bold"
                        Margin="0,30,0,0"
                        Click="SubmitEmployee_Click"/>
                
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
